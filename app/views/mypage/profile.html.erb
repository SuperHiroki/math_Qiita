<head>
  <!-- Tailwind CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.1.2/dist/tailwind.min.css" rel="stylesheet">
  <!-- Replace with your preferred icon library if not using FontAwesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
</head>

<body class="bg-gray-200">

<%= render 'shared/header' %>
<%= render 'shared/header_mypage' %>

<div class="container mx-auto p-8">
    <div class="max-w-2xl mx-auto bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-2xl transition-shadow duration-300">
        <div class="px-6 py-4">
            <h2 class="text-3xl font-semibold text-gray-800 leading-tight text-center mb-4"><%= @target_user.username %>のプロフィール</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-600">
                <div class="space-y-3">
                    <p><i class="fas fa-user mr-2 text-blue-500"></i><strong>名前:</strong> <%= @profile.name %></p>
                    <p><i class="fas fa-envelope mr-2 text-green-500"></i><strong>公開メール:</strong> <%= @profile.public_email %></p>
                    <p><i class="fab fa-github mr-2 text-black"></i><strong>GitHub:</strong> <%= @profile.github %></p>
                    <p><i class="fas fa-globe mr-2 text-purple-500"></i><strong>ウェブサイト:</strong> <%= @profile.website %></p>
                    <p><i class="fas fa-building mr-2 text-yellow-500"></i><strong>組織:</strong> <%= @profile.organization %></p>
                    <p><i class="fas fa-map-marker-alt mr-2 text-red-500"></i><strong>場所:</strong> <%= @profile.location %></p>
                    <p><i class="fas fa-info-circle mr-2 text-teal-500"></i><strong>自己紹介:</strong> <%= @profile.introduction %></p>
                </div>
                <div class="space-y-3">
                    <p><i class="fas fa-link mr-2 text-blue-400"></i><strong>SNS1:</strong> <%= @profile.sns1 %></p>
                    <p><i class="fas fa-link mr-2 text-green-400"></i><strong>SNS2:</strong> <%= @profile.sns2 %></p>
                    <p><i class="fas fa-link mr-2 text-purple-400"></i><strong>SNS3:</strong> <%= @profile.sns3 %></p>
                    <p><i class="fas fa-link mr-2 text-yellow-400"></i><strong>SNS4:</strong> <%= @profile.sns4 %></p>
                    <p><i class="fas fa-link mr-2 text-red-400"></i><strong>SNS5:</strong> <%= @profile.sns5 %></p>
                    <p><i class="fas fa-link mr-2 text-teal-400"></i><strong>SNS6:</strong> <%= @profile.sns6 %></p>
                </div>
            </div>
        </div>
    </div> 
</div>

</body>
