<head>
  <!-- Tailwind CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.1.2/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100">
  <div class="flex items-center justify-center h-screen">
    <div class="w-full max-w-md px-6 py-4 bg-white rounded-lg shadow-md">
      <h2 class="text-2xl font-semibold text-center text-gray-700 mb-6">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-4") do |f| %>
        <div class="field">
          <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-lg text-gray-700 focus:outline-none focus:shadow-outline mb-2" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border rounded-lg text-gray-700 focus:outline-none focus:shadow-outline mb-2" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field flex items-center mb-2">
            <%= f.check_box :remember_me, class: "mr-2" %>
            <%= f.label :remember_me, class: "text-sm text-gray-600" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mb-2" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</body>
