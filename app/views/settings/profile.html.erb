<head>
  <!-- Tailwind CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.1.2/dist/tailwind.min.css" rel="stylesheet">
</head>

<body>

<%= render 'shared/header' %>
<%= render 'shared/header_settings' %>

<div class="container mx-auto my-8 p-8 bg-white shadow-md rounded">
  <h2 class="text-3xl font-semibold mb-6">プロフィール設定</h2>

  <%= form_with(model: @profile, url: update_profile_settings_path, method: :patch, local: true, class: "space-y-4") do |form| %>
    
    <div id="error_explanation">
      <% if @profile.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <strong class="font-bold">Oops!</strong>
          <span class="block sm:inline"><%= pluralize(@profile.errors.count, "error") %> prohibited this post from being saved:</span>
          <ul class="list-disc list-inside mt-2">
            <% @profile.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
    
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full border-4 border-gray-300 rounded-md shadow-sm" %>

    <%= form.label :public_email, class: "block text-sm font-medium text-gray-700" %>
    <%= form.email_field :public_email, class: "mt-1 block w-full border-4 border-gray-300 rounded-md shadow-sm" %>

    <%= form.label :github, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :github, class: "mt-1 block w-full border-4 border-gray-300 rounded-md shadow-sm" %>

    <%= form.label :website, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :website, class: "mt-1 block w-full border-4 border-gray-300 rounded-md shadow-sm" %>

    <%= form.label :organization, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :organization, class: "mt-1 block w-full border-4 border-gray-300 rounded-md shadow-sm" %>

    <%= form.label :location, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :location, class: "mt-1 block w-full border-4 border-gray-300 rounded-md shadow-sm" %>

    <%= form.label :introduction, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :introduction, class: "mt-1 block w-full border-4 border-gray-300 rounded-md shadow-sm", rows: 4 %>

    <% (1..6).each do |i| %>
      <%= form.label "sns#{i}", "SNS #{i}", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field "sns#{i}", class: "mt-1 block w-full border-4 border-gray-300 rounded-md shadow-sm" %>
    <% end %>

    <div class="flex justify-end mt-6">
      <%= form.submit "保存", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 focus:outline-none focus:ring" %>
    </div>
  <% end %>
</div>

</body>
