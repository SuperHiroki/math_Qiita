<head>
  <!-- Tailwind CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.1.2/dist/tailwind.min.css" rel="stylesheet">
</head>

<body>

<div class="container mx-auto my-4 pl-10">
  <div>
    <p class="text-2xl font-semibold"><%= @user.username %>の設定</p>
  </div> 
</div>

<div class="bg-gray-400">
  <div class="max-w-5xl mx-auto px-4">
    <div class="flex justify-between items-center py-2">
      <div class="flex space-x-4">

        <%= link_to 'アカウント', "/settings/account", 
            class: "px-3 py-2 rounded-md text-sm font-medium hover:text-white hover:bg-gray-600 #{'bg-gray-800 text-white' if request.path == "/settings/account"}" %>

        <%= link_to 'プロフィール', "/settings/profile", 
            class: "px-3 py-2 rounded-md text-sm font-medium hover:text-white hover:bg-gray-600 #{'bg-gray-800 text-white' if request.path == "/settings/profile"}" %>

        <%= link_to '通知', "/settings/notification", 
            class: "px-3 py-2 rounded-md text-sm font-medium hover:text-white hover:bg-gray-600 #{'bg-gray-800 text-white' if request.path == "/settings/notification"}" %>
      </div>
    </div>
  </div>
</div>


</body>